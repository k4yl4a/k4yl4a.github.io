      padding: 20px;
      text-align: center;
    }

    p {
      transition: all 0.3s ease;
    }

    .emphasized {
      font-weight: bold;
      color: red;
      font-size: 1.5em;
    }

    video {
      max-width: 100%;
      margin-bottom: 20px;
    }
  </style>
